{
  "extends": "@quasar/app-vite/tsconfig-preset",
  "compilerOptions": {
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "allowJs": true,

    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    // Needed to address https://github.com/quasarframework/app-extension-typescript/issues/36
    "noEmit": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "noImplicitAny": false,

    "paths": {
      "src/*": ["src/*"],
      "app/*": ["*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "pages/*": ["src/pages/*"],
      "assets/*": ["src/assets/*"],
      "boot/*": ["src/boot/*"],
      "stores/*": ["src/stores/*"],
      "utils/*": ["src/utils/*"],

      "@src/models/*": ["node_modules/clubeeo-front/src/models/*"],
      "@src/api/*": ["node_modules/clubeeo-front/src/api/*"],
      "@src/uses/*": ["node_modules/clubeeo-front/src/uses/*"],
      "@stores/*": ["node_modules/clubeeo-front/src/stores/*"],
      "@src/stores/*": ["node_modules/clubeeo-front/src/stores/*"],
      "@src/lib/api/*": ["node_modules/clubeeo-front/src/lib/api/*"],
      "@src/boot/axios": ["src/boot/axios.ts"],
      "@src/state": ["node_modules/clubeeo-front/src/state"],
      "@modules/appManager/appManagerRoutes": [
        "node_modules/clubeeo-front/src/modules/appManager/appManagerRoutes.ts"
      ],
      "@modules/automation/automationRoutes": [
        "node_modules/clubeeo-front/src/modules/automation/automationRoutes.ts"
      ],
      "@apps/_common/appProps": [
        "node_modules/clubeeo-front/src/apps/_common/appProps.ts"
      ],
      "@apps/_common/appInterfaces": [
        "node_modules/clubeeo-front/src/apps/_common/appInterfaces.ts"
      ]
    }
  },
  "exclude": [
    "./dist",
    "./.quasar",
    "./node_modules",
    "./src-capacitor",
    "./src-cordova",
    "./quasar.config.*.temporary.compiled*"
  ]
}
